<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subscription_label"
            android:textAlignment="center"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/subscribe_login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Login"
            android:padding="20dp" />

        <EditText
            android:id="@+id/subscribe_pwd_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:padding="20dp" />

        <EditText
            android:id="@+id/subscribe_nom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:padding="20dp" />

        <EditText
            android:id="@+id/subscribe_prenom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prenom"
            android:padding="20dp" />

        <EditText
            android:id="@+id/subscribe_travail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Travail"
            android:padding="20dp" />

        <Button
            android:id="@+id/subscribe_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe" />
    </LinearLayout>

</RelativeLayout>